@page
@model IndexModel
@{
    ViewData["Title"] = "Weather Fetcher";
}

<h1>Weather Fetcher</h1>

<div class="container">
    <form method="post">
        <div class="form-group mb-2">
            <label for="CityName">City Name:</label>
            <input type="text" id="CityName" asp-for="CityName" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label for="CountryName">Country Name:</label>
            <input type="text" id="CountryName" asp-for="CountryName" />
            <span asp-validation-for="CountryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label asp-for="SelectedApiKey"></label>
            <select id="ApiKey" asp-for="SelectedApiKey" class="form-control">
                @foreach (var apiKey in Model.ApiKeys)
                {
                    <option value="@apiKey">@apiKey</option>
                }
            </select>
        </div>
        <button type="submit" asp-page-handler="FetchWeather">Fetch Weather</button>
    </form>
    </div>

@if (!string.IsNullOrEmpty(Model.WeatherDescription))
{
    <p id="weatherDescription">@Model.WeatherDescription</p>
}
